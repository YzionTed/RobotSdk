<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">


    <RelativeLayout android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="200dp">

        <Button android:id="@+id/btnGo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="↑"
                android:textSize="30dp"
                android:textStyle="bold"/>

        <Button android:id="@+id/btnBack"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="↓"
                android:textSize="30dp"
                android:textStyle="bold"/>

        <Button android:id="@+id/btnRight"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="→"
                android:textSize="30dp"
                android:textStyle="bold"/>

        <Button android:id="@+id/btnLeft"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="←"
                android:textSize="30dp"
                android:textStyle="bold"/>
    </RelativeLayout>

    <LinearLayout android:layout_width="200dp"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:layout_marginRight="200dp">

        <EditText android:id="@+id/degree"
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:inputType="number"
                  android:text="90"/>

        <Button android:id="@+id/okDegreeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="rotate"/>

    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <Button android:id="@+id/openProjector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="openProjector"/>

        <Button android:id="@+id/closeProjector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="closeProjector"/>

        <Button android:id="@+id/chargePowor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chargePowor"/>

        <Button android:id="@+id/walk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="auto walk"/>

        <Button android:id="@+id/stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="stop stop stop"/>

    </LinearLayout>

    <Button android:id="@+id/btnQuit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="quit"/>

</RelativeLayout>